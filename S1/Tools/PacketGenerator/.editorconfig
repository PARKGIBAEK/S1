# .editorconfig 파일의 예시
root = true  # 이 파일이 최상위 설정 파일임을 의미

# 모든 파일에 대해 UTF-8 인코딩 설정
[*]
charset = utf-8  # 모든 파일의 인코딩을 UTF-8로 설정

# 선택 사항: 코드 스타일 관련 추가 설정
indent_style = space  # 들여쓰기를 스페이스로 설정
indent_size = 4  # 들여쓰기 크기를 4 스페이스로 설정
end_of_line = lf  # 개행 문자 스타일을 LF로 설정
trim_trailing_whitespace = true  # 라인 끝의 공백 제거
insert_final_newline = true  # 마지막에 새 줄을 추가
